<!doctype html>
<html lang="es">
  <%- include('../partials/head.ejs') %>
  <body>
    <div class="container-fluid">
      <%- include('../partials/navBar.ejs') %>
      <!--Carousel-->  
      <div id="carouselExampleCaptions" class="carousel slide d-none d-md-block miCarousel " data-ride="carousel">           
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="img/3.jpg" class="block"  alt="rubia">
              </div>
            <div class="carousel-item">
              <img src="img/2.jpg" class="block" alt="mujer">
              </div>
            <div class="carousel-item">
              <img src="img/1.jpg"  class="block" alt="mujer">
              </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
          <section class="row">
            <article class="col-12">
     <!--        <h2 class="display-4 text-white bg-info text-center mt-4 p-2">Platos recomendados</h2> --->
            </article>
            <% for(let i= 0; i < platos.length; i++){ %>
                <%if(platos[i].recomendado== 1){%>
                <article class="col-12 col-md-6 col-lg-3 card p-2 efecto tarjeta">
                  <figure >
                    <img  src="/images/platos/<%= platos[i].imagen%> " class="card-img-top w-100 " alt="Plato">
                  </figure>
                    <% if (platos[i].descuento == 30) { %>
                      <img class="descuento" src="img/promo30.png" alt="Descuento 30%">  
                    <% }else if(platos[i].descuento == 15 ){ %>
                      <img class="descuento" src="img/promo15.png" alt="Descuento 30%">
                    <% } %>
                  <div class="card-body">
                    <h5 class="card-title"><%= platos[i].nombre%></h5>
                    <h5 class="card-title" >$  <%= platos[i].precio%> </h5>
                    <p class="card-text descripcion"><%= platos[i].descripcion%> </p>
                    <a href="#" class="btn btn-primary">Ver detalle</a>
                  </div>
                </article>
              <% } %>
            <% } %>
       <%- include('../partials/footer.ejs') %>
    </div>
  </body>
</html>